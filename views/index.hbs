<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dynamic Portfolio Website</title>    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />        

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/static/css/style.css">
  </head>
  <body>    
    {{>navbar data=details}}

    {{!-- Introduction section --}}
    <section class="background1 introduction_section py-5">
      <div class="container text-center">
        <div class="row">
          <div class="col-md-12">        
            {{#each introductions}}    
            <h1>{{this.title}}</h1>
            <p>{{this.content}}</p>          
            {{/each}}
          </div>
        </div>
      </div>
    </section>
        
      {{>slider slides=slides}}
    
    {{!-- services section --}}
    <section id="services_section" class="background1 py-3">
      <div class="container">
        <h6 class="text-center">MY SERVICES</h6>
      <h1 class="text-center">Here Are Some Of My Skills</h1>
      <div class="row mt-5">

        {{#each services}}        
          <div class="card">
            <div class="card-body">      
              <div class="container text-center py-3">
                <i class="{{this.icon}} text-secondary service_icon"></i>
              </div>               
              <h4 class="card-title">{{this.title}}</h4>      

              <ul>
                {{#each this.description}}
                <li>{{this.languageName}}</li>
                {{/each}}
              </ul>

          </div>
        </div> 
        {{/each}}
        </div>
      </div>
    </section>

      {{!-- education section --}}
      {{#each educations}}
      <section class="background1 banner2_section py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-6 text-center pt-5">
              {{!-- left side text --}}
              <h3>{{this.sectionName}}</h3>
              <div class="row py-3">
                <div class="col-md-6">
                  <p>{{this.universityName}}</p>
                  <p>{{this.course}}</p>
                </div>
                <div class="col-md-6">
                  <p>{{this.marks}}</p>
                  <p>{{this.date}}</p>
                </div>                                
              </div> 

              <div class="row py-3">
                <div class="col-md-6">
                  <p>{{this.bachelorUniversityName}}</p>
                  <p>{{this.bachelorCourseName}}</p>
                </div>
                <div class="col-md-6">
                  <p>{{this.bachelorMarks}}</p>
                  <p>{{this.date1}}</p>
                </div>                                
              </div> 

            </div>
            <div class="col-md-6 text-center pt-2">
              {{!-- right side image --}}
              <img class="img-fluid" style="height: 350px;" src="{{this.imageUrl}}" alt="" srcset="">
            </div>
          </div>
        </div>
      </section>
      {{/each}}

      {{!-- Experience section --}}
      {{#each experiences}}
      <section class="background1 banner2_section py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-6 text-center pt-2">
              {{!-- right side image --}}
              <img class="img-fluid" style="height: 350px;" src="{{this.imageUrl}}" alt="" srcset="">
            </div>
            <div class="col-md-6 pt-5">
              {{!-- left side text --}}
              <div class="text-center">

              <h3>{{this.title}}</h3>
              <div class="row py-3">
                <div class="col-md-6">
                  <p>{{this.developer}}</p>
                  <p>{{this.companyName}}</p>
                </div>
                <div class="col-md-6">
                  <p>{{this.date}}</p>
                  <p>{{this.date1}}</p>
                </div>                                
               </div> 
              </div>

              <ul>
                {{#each this.contentList}}
                <li>{{this.content}}</li> 
                {{/each}}               
              </ul>
            </div>            
          </div>
        </div>
      </section>
      {{/each}}
      
      {{!-- About section --}}
      <section id="about_section" class="background1 about_section py-5">
        <div class="container text-center">
          <div class="row">
            <div class="col-md-12">
              {{#each abouts}}
              <h3>{{this.title}}</h3>
                <p>{{this.content}}</p>
                {{/each}}                
            </div>
          </div>
        </div>
      </section>
    
      <footer class="footer text-center py-5">
        <div class="container">
          <div class="row">
            {{#each footers}}
            <div class="col-md-12">
              {{this.content}}
            </div>
            {{/each}}
          </div>
        </div>
      </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>